<div class="tag-article">
  <div class="article-box pure-g">

    <% if article.brief %>
      <div class="brief-data pure-u-1">
        <h3><%= link_to article.headline, article %></h3>
        <div class="article-tags tag-row">
          <% tags = article.get_tags %>
          <% tags.each do |tag| %>
            <%= link_to(tags_path(tag_id: tag.tag_id), {class: 'tag'}) do %>
              <button class="button-small pure-button">
                <i class="fa fa-tag"></i>
                <%= tag.title %>
              </button>
            <% end %>
          <% end %>
        </div>
        <% person = article.author %>
        <% co_author = article.co_author %>
        <% issue = article.issue %>
        <div class="article-teaser">
          <% article_text_teaser = article.get_article_text_teaser 25 %>
          <p><%= article_text_teaser %></p>
        </div>
        <div class="date-author">
          <% if co_author %>
            <p><%= issue.date.to_formatted_s(:long) %> / <%= link_to person.name, person, {class: 'author-link'} %> /
              <%= link_to co_author.name, co_author, {class: 'author-link'} %></p>
          <% else %>
            <p><%= issue.date.to_formatted_s(:long) %> / <%= link_to person.name, person, {class: 'author-link'} %></p>
          <% end %>
        </div>
      </div>

    <% else %>
    <div class="article-image pure-u-1 pure-u-md-1-3">
      <%= link_to image_tag(graphic.get_relative_image_path, alt: "Article Graphic", width: '100%'), article %>
    </div>
    <div class="article-data pure-u-1 pure-u-md-2-3">
      <h3><%= link_to article.headline, article %></h3>
      <div class="article-tags tag-row">
        <% tags = article.get_tags %>
        <% tags.each do |tag| %>
          <%= link_to(tags_path(tag_id: tag.tag_id), {class: 'tag'}) do %>
            <button class="button-small pure-button">
              <i class="fa fa-tag"></i>
              <%= tag.title %>
            </button>
          <% end %>
        <% end %>
      </div>
      <% person = article.author %>
      <% co_author = article.co_author %>
      <% issue = article.issue %>
      <div class="article-teaser">
        <% article_text_teaser = article.get_article_text_teaser 25 %>
        <p><%= article_text_teaser %></p>
      </div>
      <div class="date-author">
        <% if co_author %>
          <p><%= issue.date.to_formatted_s(:long) %> / <%= link_to person.name, person, {class: 'author-link'} %> /
            <%= link_to co_author.name, co_author, {class: 'author-link'} %></p>
        <% else %>
          <p><%= issue.date.to_formatted_s(:long) %> / <%= link_to person.name, person, {class: 'author-link'} %></p>
        <% end %>
      </div>
    </div>
    <% end %>

  </div>
</div>
