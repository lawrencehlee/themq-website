<div class="article-index-content pure-g">
	<div class="articles-content pure-u-2-3">
		<% @articles.zip(@graphics).each do |article, graphic| %>
			<div class="article-box pure-g">
				<div class="pure-u-1-3">
					<%= link_to image_tag(graphic.image, alt: "Article Graphic", width: '250'), article %>
				</div>
				<div class="pure-u-2-3">
					<h3><%= link_to article.headline, article %></h3>
					<% @person = Person.find(article.person_id) %>
					<% @issue = Issue.find(article.issue_id) %>
					<% @article_text_teaser = article.get_article_text_teaser %>

					<p><%= @article_text_teaser %></p>
					<div class="date-author">
						<p><%= @issue.date.to_formatted_s(:long) %> / <%= @person.name %></p>
					</div>
				</div>
			</div>
			<hr>
		<% end %>
	</div>
	<div class="sidebar-content pure-u-1-3">
		<p>big whoop</p>
	</div>
</div>

<%= will_paginate @articles %>
