<div class="article-show-content pure-g">
	<div class="article-content pure-u-2-3">
        <div class="pure-g">
            <% @tags.each do |tag| %>
                <button class="pure-button">
                    <i class="fa fa-tag"></i>
                    <%= tag.title %>
                </button>
            <% end %>
        </div>
		<h1><%= @article.headline %></h1>
		<div class="pure-g">
			<div class="author-position pure-u-1 pure-u-md-1-2">
				<p><%= @author.name %>, <%= @author_position %></p>
			</div>
			<div class="issue-date pure-u-1 pure-u-md-1-2">
				<p>Is. <%= @issue.issue_no %>, Vo. <%= @issue.volume_no %> -
								 <%= @issue.date.to_formatted_s(:long) %></p>
			</div>
		</div>

		<div class="article-image">
			<%= image_tag(@graphic.get_relative_image_path, alt:"Article Graphic", width: '100%') %>
		</div>
		<div class="image-data">
			<p>Photo by: <%= @graphic_designer.name %></p>
			<small><%= @graphic.caption %></small>
		</div>
		<div class="content-text"><%= markdown(@article_text) %></div>
	</div>
	<div class="sidebar-content pure-u-1-3">
		<p>big whoop</p>
	</div>
</div>
