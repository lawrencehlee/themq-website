<div class="article-show-content pure-g">
	<div class="article-content pure-u-2-3">
        <div class="pure-g">
            <% @tags.each do |tag| %>
                <button class="pure-button">
                    <i class="fa fa-tag"></i>
                    <%= tag.title %>
                </button>
            <% end %>
        </div>
		<h1><%= @article.headline %></h1>
		<div class="pure-g">
			<div class="pure-u-1 pure-u-md-3-4">
				<p><%= @author.name %>, <%= @author_position %> - <%= @issue.date %> </p>
			</div>
			<div class="pure-u-1 pure-u-md-1-4">
				<p>Issue <%= @issue.issue_no %>, Volume <%= @issue.volume_no %></p>
			</div>
		</div>

		<p><%= @graphic.image %></p>
		<%= link_to image_tag(@graphic.image, alt:"Article Graphic", width: '800'), '#' %>
		<p>Caption: <%= @graphic.caption %></p>
		<p>Photo by: <%= @graphic_designer.name %></p>
		<div class="content-text"><%= markdown(@article_text) %></div>
	</div>
	<div class="sidebar-content pure-u-1-3">
		<p>big whoop</p>
	</div>
</div>
