<div class="tag-ed-pcp pure-g">
	<div class="author-image pure-u-1 pure-u-md-1-3">
    <p><%= link_to image_tag(ed_pcp.get_relative_author_image_path, alt: "Author Graphic", width: '100%'), ed_pcp %></p>
	</div>
	<div class="ed-pcp-data pure-u-1 pure-u-md-2-3">
		<% if ed_pcp.point == "1" %>
			<h3>Point</h3>
		<% end %>
		<% if ed_pcp.counterpoint == "1" %>
			<h3>Counterpoint</h3>
		<% end %>
		<% if ed_pcp.ed == "1" %>
		 	<h3>Editorial</h3>
		<% end %>

		<h3 class="regular-headline"><%= link_to ed_pcp.headline, ed_pcp %></h3>
		<% @issue = Issue.find(ed_pcp.issue_id) %>
		<div class="date-author">
			<p><%= @issue.get_human_readable_date %> / <%= ed_pcp.author %></p>
		</div>
	</div>

	<% if ed_pcp.point == "1" %>
		<% cp = EdPcp.find(ed_pcp.crspnd_point_id) %>
		<div class="author-image pure-u-1 pure-u-md-1-3">
      <p><%= link_to image_tag(cp.get_relative_author_image_path, alt: "Author Graphic", width: '100%'), ed_pcp %></p>
		</div>
		<div class="ed-pcp-data pure-u-1 pure-u-md-2-3">
			<h3 class="regular-headline"><%= link_to cp.headline, ed_pcp %></h3>
			<div class="date-author">
				<p><%= @issue.get_human_readable_date %> / <%= cp.author %></p>
			</div>
		</div>
	<% end %>

</div>
