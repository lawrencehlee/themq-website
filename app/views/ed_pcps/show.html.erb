<div class="ed_pcp-show-content pure-g">
    <div class="ed_pcp-content pure-u-2-3">

        <div class="pure-g">
            <% @tags.each do |tag| %>
                <button class="pure-button">
                    <%= tag.title %>
                </button>
            <% end %>
        </div>
        <% @ed_pcps.each do |piece| %>
            <% if piece.point == "1" %>
                <h2>Point</h2>
                <% end %>
            <% if piece.counterpoint == "1" %>
                <h2>Counterpoint</h2>
            <% end %>
            <% if piece.ed == "1" %>
                <h2>Editorial</h2>
            <% end %>
            <h1><%= piece.headline %></h1>
            <div class="pure-g">
                <div class="pure-u-1 pure-u-md-3-4">
                    <%= link_to image_tag(piece.get_relative_author_image_path, alt:"Author Graphic", width:"400"), "#" %>
                    <p><%= piece.author %>, <%= piece.author_title %></p>
                </div>
                <div class="pure-u-1 pure-u-md-1-4">
                    <p>Issue, Date goes here</p>
                </div>
            </div>

            <div class="content-text"><%= markdown(piece.get_ed_pcp_text) %></div>
        <% end %>
    </div>
    <div class="sidebar-content pure-u-1-3">
        <p>Bigger whoop</p>
    </div>
</div>
