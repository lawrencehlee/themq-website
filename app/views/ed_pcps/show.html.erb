<div class="ed-pcp-show-content pure-g">
	<div class="social-share pure-u-1-24">
		<%= render :partial => "social_share", :locals => {:article => @ed_pcps[0], :status => @ed_pcps[0].headline} %>
	</div>

  <div class="ed-pcp-content pure-u-23-24 pure-u-lg-15-24">

  	<% @ed_pcps.each do |piece| %>
  		<% if piece.point == "1" %>
    		<h2>Point</h2>
	    <% end %>
			<% if piece.counterpoint == "1" %>
				<hr>
    		<h2>Counterpoint</h2>
    	<% end %>
  	  <% if piece.ed == "1" %>
	    	<h2>Editorial</h2>
    	<% end %>
			<h1><%= piece.headline %></h1>
			<div class="author-image">
				<%= image_tag(piece.get_relative_author_image_path, alt: "Author Image", width: '25%') %>
			</div>
  	  <div class="pure-g">
    		<div class="author-title pure-u-1 pure-u-md-1-2">
					<p><%= piece.author %>, <%= piece.author_title %></p>
				</div>
  	    <div class="issue-date pure-u-1 pure-u-md-1-2">
					<p><%= @issue.get_full_issue_name %> -
							<%= @issue.get_human_readable_date %></p>
      	</div>
	    </div>

  	  <div class="content-text"><%= markdown(piece.get_ed_pcp_text) %></div>
	  <% end %>
 	</div>
  <div class="sidebar-content pure-u-23-24 pure-u-lg-1-3">
  	<p>Bigger whoop</p>
  </div>
</div>
