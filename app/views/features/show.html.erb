<% content_for :title, @feature.title %>
<% content_for :features_navbar_class, "current-page" %>
<% content_for :meta_info do %>
  <meta property="og:title" content="Feature: <%= @feature.title %> | The MQ" />
  <meta property="og:description" content="" />
  <meta property="og:image" content="<%= image_url(@feature_path) %>" />
<% end %>

<div class="feature-show-content pure-g">
  <div class="social-share pure-u-1-24">
    <%= render :partial => "social_share", :locals => {:feature => @feature, :status => @feature.title} %>
  </div>
  <div class="feature-content pure-u-23-24 pure-u-lg-15-24">
    <div class="left-bar">
      <span class="feature-tags tag-row">
        <% @tags.each do |tag| %>
          <span class="tag pure-button">
            <i class="fa fa-tag"></i> <%= tag.title %>
          </span>
        <% end %>
      </span>

      <div class="social-share-small">
        <%= render :partial => "social_share_small", :locals => {:feature => @feature, :status => @feature.title} %>
      </div>

      <div class="feature-image">
        <% share_url = url_for([@feature, {only_path: false}]) %>
        <%= render :partial => "photoswipe_insert", :locals => {:feature_path => @feature_path, :width => @width, :height => @height, :share_url => share_url} %>
      </div>
    </div>
  </div>

  <div class="sidebar pure-u-23-24 pure-u-lg-1-3">
    <%= render partial: 'features/features_sidebar',
      locals: {
        related_content: @related_content,
      }
    %>
  </div>
</div
