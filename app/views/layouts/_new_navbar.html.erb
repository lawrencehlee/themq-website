<% issue = Issue.get_latest_issue %>
<nav class="navbar">
  <div class="container">
    <div id="navbar-content">
      <div class="pure-g">
        <div class="pure-u-1">
          <div id="navbar-logo">
            <%= link_to image_tag(@logo_image, alt: "MQ logo"),
              {controller: 'main', action: 'index'} %>
          </div>
        </div>
        <div class="pure-u-1" style="display: none;"> <!-- hidden for now... -->
          <em id="navbar-tagline">
            <% if rand > 0.5 %>
              <div><%= issue.celeb_quote %></div>
              <span id="navbar-celeb">
                — <%= issue.celeb %>
                <span>
                  <%= image_tag(issue.get_full_celeb_photo_path, alt: "it me") %>
                </span>
              </span>
            <% else %>
              <%= issue.masthead %>
            <% end %>
          </em>
        </div>

        <div class="pure-u-1-3 navbar-metadata left">
          <%= Time.now.strftime('%B %e, %Y') %>
        </div>
        <div class="pure-u-1-3 navbar-metadata">
          <%= issue.masthead %>
        </div>
        <div class="pure-u-1-3 navbar-metadata right">
          <%= issue.get_full_issue_name %>
        </div>

        <div class="pure-u-1">
          <div id="navbar-nav">
            <div class="pure-menu pure-menu-horizontal" id="navbar-nav-inner">
              <ul>
                <li class="navbar-hideable navbar-md navbar-lg">
                  <%= link_to "Articles", {controller: 'articles', action: 'index'},
                      class: yield(:articles_navbar_class) %>
                </li>
                <li class="navbar-hideable navbar-md navbar-lg">
                  <%= link_to "Features", {controller: 'features', action: 'index'},
                      class: yield(:features_navbar_class)%>
                </li>
                <li class="navbar-hideable navbar-md navbar-lg">
                  <%= link_to "Top Tens", {controller: 'top_tens', action: 'index'},
                      class: yield(:top_tens_navbar_class)%>
                </li>
                <li class="navbar-hideable navbar-md navbar-lg">
                  <%= link_to "Editorials", {controller: 'ed_pcps', action: 'index'},
                      class: yield(:ed_pcps_navbar_class)%>
                </li>
                <li class="navbar-hideable navbar-md navbar-lg">
                  <%= link_to "Contributors", {controller: 'people', action: 'index'},
                      class: yield(:people_navbar_class)%>
                </li>
                <li class="navbar-hideable navbar-md navbar-lg">
                  <%= link_to "About", {controller: 'static_pages', action: 'about'},
                      class: yield(:about_navbar_class)%>
                </li>
                <li class="navbar-hideable navbar-md navbar-lg">
                  <%= link_to "Search", {controller: 'search', action: 'index'},
                      class: yield(:search_navbar_class)%>
                </li>
                <li id="navbar-sections" class="navbar-hideable navbar-sm pure-menu-item pure-menu-has-children pure-menu-allow-hover navbar-parent-list">
                  <a href="#" onclick="return false">Sections ▼</a>
                  <ul class="pure-menu-children navbar-sublist">
                    <li class="pure-menu-item">
                      <%= link_to "Articles", {controller: 'articles', action: 'index'} %>
                    </li>
                    <li class="pure-menu-item">
                      <%= link_to "Features", {controller: 'features', action: 'index'} %>
                    </li>
                    <li class="pure-menu-item">
                      <%= link_to "Top Tens", {controller: 'top_tens', action: 'index'} %>
                    </li>
                    <li class="pure-menu-item">
                      <%= link_to "Editorials", {controller: 'ed_pcps', action: 'index'} %>
                    </li>
                    <li class="pure-menu-item">
                      <%= link_to "Contributors", controller: 'people', action: 'index' %>
                    </li>
                    <li class="pure-menu-item">
                      <%= link_to "About", controller: 'static_pages', action: 'about' %>
                    </li>
                    <li class="pure-menu-item">
                      <%= link_to "Search", controller: 'search', action: 'index' %>
                    </li>
                  </ul>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>
