<div class="main pure-g">
	<div class="main-content pure-u-2-3">
		<div class="left-bar">
			<div class="owl-carousel slideshow">
				<% @featured_content.each do |content| %>
					<% # TODO: not every piece of content has a headline
						# How do we handle this?
						graphic = Graphic.find(content.graphic_id) %>
					<div class="slideshow-element">
						<%= link_to image_tag(graphic.get_relative_image_path,
							alt:"Article Graphic", style: 'width:100%'), content %>
						<%= link_to content.headline, content,
							:class => "slideshow-label-wrapper slideshow-label" %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
	<div class="sidebar-content pure-u-1-3">
		<div class="right-bar">
			<p>big whoop</p>
		</div>
	</div>
</div>
