<% content_for :title, "Contributors" %>
<% content_for :meta_info do %>
  <meta property="og:title" content="Contributors | The MQ" />
  <meta property="og:description" content="Are you Facebook friends with any of the people on this page?" />
  <meta property="og:image" content="<%= image_url(Rails.configuration.x.relative_lws_path) %>" />
<% end %>

<div class="person-index-page">
  <div class="person-index-content">
    <h2>Here's all the numbskulls that put the paper together!</h2>
    <div class="editors-index">
      <div class="top-two-rows-and-feature pure-g">
        <div class="editor-rows pure-u-1 pure-u-lg-3-5">
          <!-- loop through first six editors here, each a pure-u-1-3 -->
            <div class="pure-g">
            <% @first_editors.each do |editor| %>
              <div class="editor-data pure-u-1-2 pure-u-md-1-3">
                <div class="editor-image">
                  <%= link_to image_tag(editor.get_full_image_path, alt: 'Editor Image', width: '100%'), editor %>
                </div>
                <h3><%= link_to editor.name, editor %></h3>
                <small><%= editor.position.title %></small>
              </div>
            <% end %>
          </div>
        </div>
        <div class="featured-editor pure-u-1 pure-u-lg-2-5">
          <!-- feature random editor here -->
          <div class="pure-g">
            <div class="pure-u-1-2">
              <div class="right-padded-inner-sm">
                <h2><%= link_to @featured_editor.name, @featured_editor %></h2>
                <h3><%= @featured_position.title %></h3>
                <p class="bio"><%= @featured_editor.bio %></p>
              </div>
            </div>
            <div class="pure-u-1-2">
              <%= link_to image_tag(@featured_editor.get_full_image_path, alt: 'Editor Image', width: '100%'), @featured_editor %>
            </div>
          </div>
        </div>
      </div>
      <div class="rest-of-rows pure-g">
        <!-- loop through rest of editors here -->
        <% @last_editors.each do |editor| %>
          <div class="editor-data pure-u-1-2 pure-u-md-1-3 pure-u-lg-1-5">
            <div class="editor-image">
              <%= link_to image_tag(editor.get_full_image_path, alt: 'Editor Image', width: '100%'), editor %>
            </div>
            <h3><%= link_to editor.name, editor %></h3>
            <small><%= editor.position.title %></small>
          </div>
        <% end %>
      </div>
    </div>

    <div class="staff-members">
      <h2>Staff Members</h2>
      <div class="pure-g staff-box">
        <div class="pure-u-1-2">
          <div class="staff-members-col-1">
            <% @staff_members_right.each do |staff_member| %>
              <% unless staff_member.name == "Brief" %>
                <p><%= link_to staff_member.name, staff_member, {class: 'author-link'} %></p>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="pure-u-1-2">
          <div class="staff-members-col-2">
            <% @staff_members_left.each do |staff_member| %>
              <p><%= link_to staff_member.name, staff_member, {class: 'author-link'} %></p>
            <% end %>
          </div>
        </div>
        <div class="staff-photo pure-u-1">
          <div class="staff-photo-image">
            <%= image_tag(@staff_photo, alt: 'Staff Photo', width: '100%') %>
          </div>
          <h3 class="staff-photo-caption"><%=@staff_photo_caption%></h3>
        </div>
      </div>
    </div>
</div>


