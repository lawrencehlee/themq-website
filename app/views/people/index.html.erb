<div class="person-index-page">
	<div class="person-index-content">
		<h2>Here's all the numbskulls that put the paper together!</h2>
		<div class="editors-index">
			<div class="top-two-rows-and-feature pure-g">
				<div class="editor-rows pure-u-3-5">
					<!-- loop through first six editors here, each a pure-u-1-3 -->
						<div class="pure-g">
						<% @first_editors.zip(@first_positions).each do |editor, position| %>
              <div class="editor-data pure-u-1-3">
                <div class="editor-image">
	  							<%= link_to image_tag(editor.get_relative_image_path, alt: 'Editor Image', width: '100%'), editor %>
                </div>
								<h3><%= link_to editor.name, editor %></h3>
								<small><%= position.title %></small>
							</div>
						<% end %>
					</div>
				</div>
				<div class="featured-editor pure-u-2-5">
					<!-- feature random editor here -->
					<div class="pure-g">
						<div class="pure-u-1-2">
							<h2><%= link_to @featured_editor.name, @featured_editor %></h2>
							<h3><%= @featured_position.title %></h3>
							<p class="bio"><%= @featured_editor.bio %></p>
						</div>
						<div class="pure-u-1-2">
							<%= link_to image_tag(@featured_editor.get_relative_image_path, alt: 'Editor Image', width: '100%'), @featured_editor %>
						</div>
					</div>
				</div>
			</div>
			<div class="rest-of-rows pure-g">
				<!-- loop through rest of editors here -->
				<% @last_editors.zip(@last_positions).each do |editor, position| %>
          <div class="editor-data pure-u-1-5">
            <div class="editor-image">
  						<%= link_to image_tag(editor.get_relative_image_path, alt: 'Editor Image', width: '100%'), editor %>
            </div>
						<h3><%= link_to editor.name, editor %></h3>
						<small><%= position.title %></small>
					</div>
				<% end %>
			</div>
		</div>

		<div class="staff-members">
		</div>
</div>


