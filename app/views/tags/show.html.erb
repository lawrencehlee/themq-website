<% content_for :title, @tag.title + " " + @type_name %>

<% unless @navbar_item.nil? %>
    <div class="navbar-mapper"><%= @navbar_item %></div>
<% end %>
<div class="tag-show pure-g">
  <div class="tag-show-content pure-u-1 pure-u-md-2-3">
    <div class="left-bar">
      <div class="pagination pure-u-1">
        <%= paginate @content_pieces %>
      </div>
      <h1 class="regular-headline">All <%= @tag.title + " " + @type_name%></h3>
      <% @content_pieces.each do |piece| %>
        <%= piece.render_tag_show_view %>
        <hr>
      <% end %>
      <div class="pagination pure-u-1">
        <%= paginate @content_pieces %>
      </div>
    </div>
  </div>
  <div class="sidebar pure-u-1 pure-u-md-1-3">
    <%= render 'layouts/general_sidebar', :top_ten => @random_top_ten,
      :self_ad => @random_self_ad, :brief => @brief, :skybox => @skybox %>
  </div>
</div>
