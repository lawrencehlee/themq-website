<div class="tag-show pure-g">
	<div class="tag-show-content pure-u-2-3">
		<div class="pure-g">
			<% @articles.each do |article| %>
				<div class="tag-article pure-u-1 pure-u-md-1-2">
					<%= article.render_tag_view %>
				</div>
			<% end %>
			<hr class="pure-u-1">
			<% @ed_pcps.each do |ed_pcp| %>
				<div class="tag-ed-pcp pure-u-1">
					<%= ed_pcp.render_tag_view %>
				</div>
			<% end %>
			<hr>
			<% @top_tens.each do |top_ten| %>
				<div class="tag-top-ten pure-u-1 pure-u-md-1-2">
					<%= top_ten.render_tag_view %>
				</div>
			<% end %>
			<hr>
			<% @features.each do |feature| %>
				<div class="tag-feature pure-u-1 pure-u-md-1-2">
					<%= feature.render_tag_view %>
				</div>
			<% end %>
		</div>
	</div>
	<div class="sidebar-content pure-u-1-3">
		whoop me amadeus
	</div>
</div>
